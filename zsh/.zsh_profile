auth(){
    echo "-> 1) stg\n-> 2) prd"
    read OPCAO

    if test "$OPCAO" = 2; then
        olist && echo "$SENHA_GOOGLE_AUTH" | aws-google-auth -q
        echo "conectado a PRODUCAO"
    elif test "$OPCAO" = 1; then
        olist-staging && echo "$SENHA_GOOGLE_AUTH" | aws-google-auth -q
        echo "conectado a PRODUCAO"
    else
        auth
    fi
}

audio(){
    echo "-> 1) JBL\n-> 2) Headset"
    read OPCAO

    if test "$OPCAO" = 1; then
        pacmd set-default-sink alsa_output.plughw_0_0
        pacmd set-default-source alsa_input.usb-046d_Logitech_Webcam_C925e_62AC50BF-02.analog-stereo
        echo "Conectado a JBL"
    elif test "$OPCAO" = 2; then
        pacmd set-default-sink alsa_output.usb-Logitech_G635_Gaming_Headset_00000000-00.analog-stereo
        pacmd set-default-source alsa_output.usb-Logitech_G635_Gaming_Headset_00000000-00.analog-stereo.monitor
        echo "Conectado ao Headset"
    else
        echo "Opcao invalida"
    fi
}

fzf_nvim(){
    nvim $(ag --files-with-matches --hidden --path-to-ignore ~/.ignore -g "" | fzf --preview "bat --color=always --style=numbers {}")
}

gpl(){
    if test "$1" = "olist"; then
        ol git fetch && ol git pull origin $2
    else
        git fetch && git pull origin $1
    fi
}

olist () {
    export AWS_ROLE_ARN=$AWS_ROLE_ARN_PROD
}
olist-staging () {
    export AWS_ROLE_ARN=$AWS_ROLE_ARN_STAGING
}
validateYaml() {
    python -c 'import yaml,sys;yaml.safe_load(sys.stdin)' < $1
}

catr() {
    tail -n "+$1" $3 | head -n "$(($2 - $1 + 1))"
}
